{
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "eps": 1e-08
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 0.0001,
      "warmup_num_steps": 100,
      "total_num_steps": 10000
    }
  },
  "activation_checkpointing": {
    "partition_activations": false,
    "cpu_checkpointing": false,
    "profile": false
  },
  "zero_optimization": {
    "stage": 2,
    "allgather_partitions": false,
    "allgather_bucket_size": 1000000000.0,
    "reduce_bucket_size": 1000000000.0,
    "overlap_comm": false,
    "reduce_scatter": false
  },
  "flops_profiler": {
    "enabled": false,
    "profile_step": 1,
    "module_depth": -1,
    "top_modules": 3,
    "detailed": false
  },
  "gradient_clipping": 0.01
}
